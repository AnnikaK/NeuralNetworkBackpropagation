import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;

public class WriteFileThread extends Thread {

	private Network net;
	private FileWriter writer;

	public WriteFileThread(Network net) {
		this.net = net;
	}

	@Override
	public void run() {
		
		
		//if not existing yet
		File txt = new File("networkWeights.txt");
		
		 ArrayList<StringBuffer> weights = net.getWeights();
		
		
		try {
writer = new FileWriter(txt,true);
		
			writer.write("-------------------------------");
			writer.write(System.getProperty("line.separator"));
			for(int i = 0; i < weights.size(); i++)
			{
				writer.write("Gewichte für Schicht " + i +":");
				writer.write(System.getProperty("line.separator"));
				
				writer.write(weights.get(i).toString());
				writer.write(System.getProperty("line.separator"));
			}
			writer.write("-------------------------------");
			writer.write(System.getProperty("line.separator"));
			writer.write(System.getProperty("line.separator"));
			


		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		 finally {
	            if (writer != null){
	                writer.flush();
	                writer.close();
	            } 
	}

}
